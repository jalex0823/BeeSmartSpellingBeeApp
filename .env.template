# BeeSmart Spelling App v1.5 - Environment Configuration Template
# Copy this file to .env and customize values for your deployment

# Flask Configuration
FLASK_APP=AjaSpellBApp.py
FLASK_ENV=production
SECRET_KEY=change-me-to-secure-random-string

# Feature Flags
ENABLE_OCR=true
ENABLE_TTS=false
ENABLE_MIC=false
ENABLE_VOICE_RECOGNITION=false

# API Configuration
DICTIONARY_API_BASE_URL=https://api.dictionaryapi.dev/api/v2/entries/en/
DICTIONARY_API_TIMEOUT=10
DICTIONARY_API_RATE_LIMIT=0.5

# Cache Configuration
DICTIONARY_CACHE_FILE=data/dictionary.json
MAX_CACHE_ENTRIES=1000

# Upload Limits
MAX_FILE_SIZE_MB=10
MAX_WORDS_PER_UPLOAD=500
ALLOWED_FILE_EXTENSIONS=.txt,.csv,.docx,.pdf,.jpg,.png,.jpeg,.webp

# OCR Configuration (when implemented)
OCR_ENGINE=tesseract
OCR_CONFIDENCE_THRESHOLD=60
OCR_MAX_IMAGE_SIZE=5000
OCR_DPI_WARNING_THRESHOLD=150

# Session Configuration
SESSION_TIMEOUT_HOURS=24
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/beesmart.log

# Development vs Production
DEBUG=false
TESTING=false

# Deployment Configuration
PORT=5000
HOST=0.0.0.0

# Railway.app specific (uncomment if deploying to Railway)
# RAILWAY_STATIC_URL=https://yourdomain.railway.app
# RAILWAY_ENVIRONMENT=production

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=30

# Security Settings
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff